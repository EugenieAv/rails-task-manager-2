<h1><%= @task.title %> </h1>

<%= link_to 'Edit this task', edit_task_path(@task.id)  %>

<%= @task.detail %>
<% if @task.completed %>
  <i class="fa fa-check-square-o"></i> This task is completed
<% else %>
  <i class="fa fa-square-o"></i> This task is not completed yet
<% end %>

<%= link_to 'back to list', tasks_path  %>
