<%= form_for(@task) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :detail %><br>
    <%= f.text_area :detail %>
  </div>

  <%= f.check_box :completed %> completed

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
